<Window x:Class="WPF_App.FormAndroidPhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App"
        mc:Ignorable="d"
        Title="FormAndroidPhone" Height="420" Width="720">
    <Grid>
        <Grid x:Name="Grid" Margin="10,10,10,100">
            <Grid.RowDefinitions>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="58*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Модель" HorizontalAlignment="Left" Margin="16,0,0,0" VerticalAlignment="Center" Height="25" Width="100"/>
            <Label Content="Идентификатор" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Margin="16,0,0,0" Height="25" Width="120"/>
            <Label Content="Год выпуска" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" RenderTransformOrigin="2,0.6" Height="25" Width="100" Margin="16,0,0,0"/>
            <Label Content="Цена" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="25" Width="100" Margin="16,0,0,0"/>
            <Label Content="Биометрические данные" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="25" Width="146"/>
            <Label Content="Разблокирован" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="6" VerticalAlignment="Top" Height="25" Width="100"/>
            <Label Content="Дата прошивки" HorizontalAlignment="Left" Margin="16,0,0,0" Grid.Row="7" VerticalAlignment="Center" Height="25" Width="130"/>
            <Label Content="Root права" HorizontalAlignment="Left" Margin="16,0,0,0" Grid.Row="8" VerticalAlignment="Center" Height="25" Width="100"/>

            <TextBox x:Name="TextBoxModel" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="285" Height="25" MaxLength="40" Text="{Binding ModelName}"/>
            <TextBox x:Name="TextBoxIdentifier" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="285" Height="25" Grid.Row="1" MaxLength="60" Text="{Binding PhoneIdentifier}"/>
            <TextBox x:Name="TextBoxYearRelease" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="285" Height="25" Grid.Row="2" PreviewTextInput="PreviewTextInputInt" MaxLength="7" Text="{Binding YearOfManufacture}"/>
            <TextBox x:Name="TextBoxPrice" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="285" Height="25" Grid.Row="3" PreviewTextInput="PreviewTextInputFloat" MaxLength="10" Text="{Binding PhonePrice}"/>
            <TextBox x:Name="TextBoxBiometricData" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Width="285" Height="25" Text="{Binding Biometrics}"/>
            <CheckBox x:Name="CheckBoxUnblocked" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="32,4,0,0" Grid.Row="6" VerticalAlignment="Top" IsChecked="{Binding IsUnlocked}" >
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </CheckBox.RenderTransform>
            </CheckBox>
            <DatePicker x:Name ="DatePickerFirmwareDate" Grid.Column="1" Margin="32,3,32,9" Grid.Row="7" Height="25" SelectedDate="{Binding FirmwareDate}"/>
            <CheckBox x:Name ="CheckBoxRoot" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="32,5,0,0" Grid.Row="8" VerticalAlignment="Top" IsChecked="{Binding RootEnabled}">
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </CheckBox.RenderTransform>
            </CheckBox>
        </Grid>
        <Button x:Name="ButtonAction" Content="Действие" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="300" Click="ButtonAction_Click" Margin="28,318,0,0"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="300" Click="ButtonCancel_Click" Margin="388,318,0,0"/>
        <Label Content="Андроид" HorizontalAlignment="Left" Margin="231,-4,0,0" VerticalAlignment="Top" Height="26" Width="159"/>
    </Grid>
</Window>
